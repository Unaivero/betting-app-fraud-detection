{
  "name": "betting-app-fraud-detection",
  "version": "1.0.0",
  "description": "Mobile automation testing project to detect suspicious behavior patterns in a betting app",
  "main": "index.js",
  "scripts": {
    "test": "wdio run ./wdio.conf.js",
    "test:normal": "wdio run ./wdio.conf.js --suite normal",
    "test:suspicious": "wdio run ./wdio.conf.js --suite suspicious",
    "test:dev": "TEST_ENV=dev wdio run ./wdio.conf.js",
    "test:staging": "TEST_ENV=staging wdio run ./wdio.conf.js",
    "test:prod": "TEST_ENV=prod wdio run ./wdio.conf.js",
    "test:normal:dev": "TEST_ENV=dev wdio run ./wdio.conf.js --suite normal",
    "test:suspicious:dev": "TEST_ENV=dev wdio run ./wdio.conf.js --suite suspicious",
    "test:normal:staging": "TEST_ENV=staging wdio run ./wdio.conf.js --suite normal",
    "test:suspicious:staging": "TEST_ENV=staging wdio run ./wdio.conf.js --suite suspicious",
    "test:normal:prod": "TEST_ENV=prod wdio run ./wdio.conf.js --suite normal",
    "test:suspicious:prod": "TEST_ENV=prod wdio run ./wdio.conf.js --suite suspicious",
    "report": "allure generate --clean ./allure-results && allure open",
    "appium": "node start-appium.js",
    "visual-baseline": "TEST_ENV=dev wdio run ./wdio.conf.js --spec ./test/specs/visual-baseline.spec.js",
    
    "test:device": "wdio run ./config/device.config.loader.js",
    "test:android": "wdio run ./config/device.config.loader.js --device=android-real",
    "test:ios": "wdio run ./config/device.config.loader.js --device=ios-real",
    "test:cloud": "wdio run ./config/device.config.loader.js --service=browserstack",
    "test:browserstack": "wdio run ./config/device.config.loader.js --service=browserstack",
    "test:performance": "wdio run ./wdio.conf.js --spec ./test/specs/performance-detection.spec.js",
    "test:performance:android": "wdio run ./config/device.config.loader.js --device=android-real --spec ./test/specs/performance-detection.spec.js",
    "test:performance:ios": "wdio run ./config/device.config.loader.js --device=ios-real --spec ./test/specs/performance-detection.spec.js",
    "test:suspicious:device": "TEST_DEVICE=android-real wdio run ./config/device.config.loader.js --suite suspicious",
    "test:suspicious:cloud": "TEST_DEVICE=android-real CLOUD_SERVICE=browserstack wdio run ./config/device.config.loader.js --suite suspicious"
  },
  "keywords": [
    "webdriverio",
    "appium",
    "automation",
    "mobile",
    "fraud-detection"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@faker-js/faker": "^7.6.0",
    "@wdio/allure-reporter": "^7.26.0",
    "@wdio/appium-service": "^7.26.0",
    "@wdio/cli": "^7.26.0",
    "@wdio/local-runner": "^7.26.0",
    "@wdio/mocha-framework": "^7.26.0",
    "@wdio/spec-reporter": "^7.26.0",
    "allure-commandline": "^2.18.1",
    "appium": "^2.0.0-beta.48",
    "appium-uiautomator2-driver": "^2.0.6",
    "appium-xcuitest-driver": "^4.16.3",
    "js-yaml": "^4.1.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.3",
    "wdio-image-comparison-service": "^5.0.0",
    "resemble": "^2.0.0",
    "retry": "^0.13.1",
    "expect-webdriverio": "^3.6.0",
    "chai": "^4.3.7",
    "chai-as-promised": "^7.1.1"
  }
}